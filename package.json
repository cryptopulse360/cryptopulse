{
  "name": "cryptopulse-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run build:og && next build",
    "build:og": "tsx src/scripts/build-og-images.ts",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "export": "npm run build",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:performance": "tsx src/scripts/test-performance.ts",
    "test:accessibility": "vitest run --reporter=verbose src/**/__tests__/*.accessibility.test.tsx src/lib/__tests__/accessibility.test.ts",
    "test:contrast": "tsx src/scripts/test-color-contrast.ts",
    "test:final": "tsx src/scripts/final-testing.ts",
    "test:cross-browser": "tsx src/scripts/cross-browser-test.ts",
    "test:responsive": "tsx src/scripts/mobile-responsive-test.ts",
    "lighthouse": "lhci autorun",
    "lighthouse:desktop": "lighthouse http://localhost:3000 --preset=desktop --output=html --output-path=./lighthouse-desktop.html",
    "lighthouse:mobile": "lighthouse http://localhost:3000 --preset=mobile --output=html --output-path=./lighthouse-mobile.html",
    "analyze": "npm run build && npm run lighthouse:desktop && npm run lighthouse:mobile",
    "validate-ci": "node scripts/validate-ci.js",
    "configure-deployment": "node scripts/configure-deployment.js",
    "test-deployment": "node scripts/test-deployment.js"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^15.5.3",
    "@types/lunr": "^2.3.7",
    "@vercel/og": "^0.8.5",
    "gray-matter": "^4.0.3",
    "lunr": "^2.3.9",
    "next": "^14.2.0",
    "next-mdx-remote": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reading-time": "^1.5.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@lhci/cli": "^0.14.0",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.0",
    "axe-core": "^4.10.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "jsdom": "^27.0.0",
    "lighthouse": "^12.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "serve": "^14.2.4",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0",
    "vitest": "^1.6.0"
  }
}
